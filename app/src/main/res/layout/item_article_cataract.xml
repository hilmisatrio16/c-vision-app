<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_article"
        android:layout_width="120dp"
        android:layout_height="84dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        app:shapeAppearanceOverlay="@style/ShapeItemImageAppearance"
        android:src="@drawable/image_info_temporary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_article"
        android:layout_centerVertical="true"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Characteristics of cataracts"
            android:textSize="16sp"
            android:maxLength="35"
            android:maxLines="1"
            android:textColor="@color/tuna"/>

        <TextView
            android:id="@+id/tv_short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="Lorem ipsum dolor sit amet consectetur. Elementum ultricies"
            android:textSize="12sp"
            android:textColor="@color/tuna"
            android:maxLength="45"
            android:ellipsize="end"/>
    </LinearLayout>

</RelativeLayout>